@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8"><h2 class="text-primary"> Category List</h2></div>
        <div class="col-4 mt-4 justify-content-end">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i> &nbsp;  Create New Products
            </a>
        </div>
    </div>
</div>
<br />

<div class="container-fluid align-content-center">

    <table id="tblData" class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Author
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>

                </th>
            </tr>

        </thead> 
    </table> 
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}