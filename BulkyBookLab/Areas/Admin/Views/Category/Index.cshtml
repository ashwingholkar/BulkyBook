<div class="container">
    <div class="row">
        <div class="col-8"><h2 class="text-primary"> Category List</h2></div>
        <div class="col-4 mt-4 justify-content-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i> &nbsp;  Create New Category
            </a>
        </div>
    </div>
    </div>
<br />

<div class="container-fluid align-content-center">
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @item.DisplayOrder
                    </td>
                    <td class="text-center">
 
                        <div class="btn-group" role="group" >
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-md">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-md">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>


